<Page
    x:Class="OpenSilverApplication.ExpressionBlend.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilverApplication.ExpressionBlend"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <local:LocalUserControl DataContext="{Binding Path=Label, Mode=TwoWay}">
            </local:LocalUserControl>
            <Button x:Name="toggleColorButton" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="200" Click="Button_Click" Content="Update the other button"></Button>
        </StackPanel>
    </Grid>
</Page>